<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<title>
			{% block title %}{% endblock %}
		</title>
		<style>
			.special {
				color: red;
				font-size: 10px;
			}
		</style>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"/>
		<link rel="stylesheet" href="{{ asset('css/base.css') }}"/>
		{% block stylesheets %}
		{% endblock %}
	</head>

	<body class="bg-light">
		<div id="wrapper">
			<div id="sidebar-wrapper">
				<ul class="sidebar-nav">
					<li {% block activeHome %} {% endblock %}>
						<a href="{{ path('main_page') }}" data-toggle="collapse" data-target="#collapseOne">Accueil</a>
					</li>
					<li {% block activeCategory %} {% endblock %}>
						<a href="{{ path('car_category_index') }}" data-toggle="collapse" data-target="#collapseOne">Catégorie</a>
					</li>
					<li {% block activeCar %} {% endblock %}>
						<a href="{{ path('car_index') }}" data-toggle="collapse" data-target="#collapseOne">Voiture</a>
					</li>
				</ul>
			</div>
			<div id="page-content-wrapper">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12 ">
							<div class="row">
								<div class="col mb-5">
									<h3>
										{% block content_title %}{% endblock %}
									</h3>
								</div>
								<div class="col">
									<a href="#menu-toggle" class="btn btn-sm float-end" style="background-color: #7a6595" id="menu-toggle" data-bs-toggle="tooltip" title="Réduire le menu">
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-list" viewbox="0 0 16 16">
											<path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
										</svg>
									</a>
								</div>
							</div>
							{% block content %}{% endblock %}
						</div>
					</div>
				</div>
			</div>
		</div>
		<script>

		</script>
		{% block javascripts %}
			<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
			<script src="{{ asset('js/base.js') }}"></script>
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

	</body>
</html>
